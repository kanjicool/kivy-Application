#:kivy 1.0.9
<CanvasWidget>
    Button:
        text:'Clear'
        font_size:20
        right: root.right
        top:root.top
        width:80
        height:40
        background_normal : 'red_button.png'
        background_down : 'button_down.png'
        border: (2,2,2,2)
    BoxLayout:
        orientation:'vertical'
        padding:2
        spacing:2
        x : 0
        top: root.top
        width: 80
        height : 120

        ToggleButton:
            group:'linewidth'
            text : 'Thin'
        ToggleButton:
            group: 'linewidth'
            text : 'Normal'
        ToggleButton:
            group: 'linewigth'
            text : 'Thick'

