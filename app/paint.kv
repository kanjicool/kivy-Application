#:kivy 1.0.9
#:import C kivy.utils.get_color_from_hex
# from kivy.utils import get_color_froom_hex as C

<MyButton>
    background_normal : 'sigma_cat.png'
    background_normal : 'sigma_cat.png'
    border : (3,3,3,3)

<ColorButton@MyButton>
    group : 'color'

<LineWidthButton@MyButton>
    group : 'linewidth'
    background_color : C('#808080')

<CanvasWidget>
    Button:
        text:'Clear'
        font_size:20
        right: root.right
        top:root.top
        width:100
        height:60
        background_normal : 'ytexe.png'
        background_down : 'ytexe.png'
        border: (2,2,2,2)
    
    BoxLayout:
        orientation:'vertical'
        padding:2
        spacing:2
        x : 0
        top: root.top
        width: 80
        height : 120

        LineWidthButton:
            text : 'Thin'
        LineWidthButton:
            text : 'Normal'
        LineWidthButton:
            text : 'Thick'

    BoxLayout:
        orientation: 'horizontal'
        padding : 2
        spacing : 2
        x: 0
        y: 0
        width : root.width
        height: 40

        ColorButton:
            background_color : C('#FF0000')
            text: 'Red'
        ColorButton:
            text: 'Bule'
            background_color : C('#0000FF')
        
