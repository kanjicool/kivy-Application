#:kivy 1.0.9
<MyButton>
    background_normal : 'button_normal.png'
    background_normal : 'button_down.png'
    border : (3,3,3,3)

<ColorButton@MyButton>
    group : 'color'

<LineWidthButton@MyButton>
    group : 'linewidth'

<CanvasWidget>
    Button:
        text:'Clear'
        font_size:20
        right: root.right
        top:root.top
        width:80
        height:40
        background_normal : 'ytexe.png'
        background_down : 'ytexe.png'
        border: (2,2,2,2)
    
    BoxLayout:
        orientation:'vertical'
        padding:2
        spacing:2
        x : 0
        top: root.top
        width: 80
        height : 120

        LineWidthButton:
            text : 'Thin'
        LineWidthButton:
            text : 'Normal'
        LineWidthButton:
            text : 'Thick'

    BoxLayout:
        orientation: 'horizontal'
        padding : 2
        spacing : 2
        x: 0
        y: 0
        width : root.width
        height: 40

        ColorButton:
            text: 'Red'
        ColorButton:
            text: 'Bule'
        
