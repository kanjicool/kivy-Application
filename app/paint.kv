#:kivy 1.0.9
<CanvasWidget>
    Button:
        text:'Clear'
        font_size:20
        right: root.right
        top:root.top
        width:80
        height:40
        background_normal : 'ytexe.png'
        background_down : 'ytexe.png'
        border: (2,2,2,2)
    
    BoxLayout:
        orientation:'vertical'
        padding:2
        spacing:2
        x : 0
        top: root.top
        width: 80
        height : 120

        ToggleButton:
            group:'linewidth'
            text : 'Thin'
        ToggleButton:
            group: 'linewidth'
            text : 'Normal'
        ToggleButton:
            group: 'linewigth'
            text : 'Thick'

    BoxLayout:
        orientation: 'horizontal'
        padding : 2
        spacing : 2
        x: 0
        y: 0
        width : root.width
        height: 40

        ToggleButton:
            group: 'color'
            text: 'Red'
        ToggleButton:
            group: 'color'
            text: 'Bule'
        
